
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?scenebuilder-stylesheet @/ChatWindowJavaFX/css/Style.css?>
<?import java.net.URL?>
<?package javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.ScrollPane?>
<VBox fx:controller="ChatWindowJavaFX.sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <MenuBar prefHeight="29.0">
        <Menu mnemonicParsing="false" text="Theme">
            <MenuItem mnemonicParsing="false" text="Blue-Red"  onAction="#makeBlueRedTheme" />
            <MenuItem mnemonicParsing="false" text="Green-Yellow"  onAction="#makeGreenYellowTheme"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Tools">
            <MenuItem mnemonicParsing="false" text="Clear" onAction="#clearChat"/>
        </Menu>
    </MenuBar>
    <HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" VBox.vgrow="ALWAYS" >
        <stylesheets><URL value="@/ChatWindowJavaFX/css/Style.css"/></stylesheets>
        <VBox styleClass="messageSite" >
            <HBox  depthTest="ENABLE"  styleClass="loginTitleBlueRed" fx:id="loginTitle">
                    <ImageView fx:id="avatarImg" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image  url="@/ChatWindowJavaFX/smiles/anger.png" />
                        <HBox.margin>
                            <Insets  right="30.0"/>
                        </HBox.margin>
                    </ImageView>

                    <Label fx:id="userName" text="userName" styleClass="userLogin"/>

                    <Circle disable="true" fill="#3ed936"  radius="8.0" stroke="WHITE" strokeLineJoin="ROUND">
                        <HBox.margin>
                            <Insets left="15.0" />
                        </HBox.margin>
                    </Circle>
            </HBox>

            <ScrollPane fx:id="sp"  VBox.Vgrow="ALWAYS" layoutY="1.0"  prefHeight="301.55" prefWidth="280.0" styleClass="scroll-pane">
                    <TextFlow fx:id="textFlow"  VBox.Vgrow="ALWAYS" styleClass="textFlow" />
            </ScrollPane>

            <HBox>
                <TextField fx:id="textField" onAction="#sendMsg" HBox.hgrow="ALWAYS" promptText="Введите сообщение..."/>
                <Button onAction="#sendMsg" fx:id="btnSend" text="Send" styleClass="sendButtonRed"/>
            </HBox>
        </VBox>

        <VBox styleClass="contactsSite">
            <Label  styleClass="contactsTitleBlueRed" text="Contacts" fx:id="contactsTitle"/>
            <ScrollPane   VBox.Vgrow="ALWAYS" layoutY="1.0" prefHeight="301.55"
                        prefWidth="280.0" styleClass="scrollPaneContacts">
                <TextFlow  VBox.Vgrow="ALWAYS" styleClass="textFlowContacts" />
            </ScrollPane>

        </VBox>

    </HBox>
</VBox>


